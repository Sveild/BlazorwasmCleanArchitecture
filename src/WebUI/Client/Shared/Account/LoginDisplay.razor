<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="ml-2" Href="logout">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="register">Register</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="ml-2" Href="login">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>